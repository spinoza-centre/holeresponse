	month = nov,
	year = {2015},
	pages = {2588--2599},
	file = {Brouwer et al. - 2015 - Normalization in human somatosensory cortex.pdf:C\:\\Users\\Jurjen Heij\\Zotero\\storage\\4ZSZ3KJT\\Brouwer et al. - 2015 - Normalization in human somatosensory cortex.pdf:application/pdf},
}

