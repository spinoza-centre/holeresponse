}

@article{dumoulin_how_2018,
	title = {How visual cortical organization is altered by ophthalmologic and neurologic disorders},
	volume = {4},
	issn = {23744650},
	doi = {10.1146/annurev-vision-091517-033948},
	abstract = {Receptive fields are a core property of cortical organization. Modern neuroimaging allows routine access to visual population receptive fields (pRFs), enabling investigations of clinical disorders. Yet how the underlying neural circuitry operates is controversial. The controversy surrounds observations that measurements of pRFs can change in healthy adults as well as in patients with a range of ophthalmological and neurological disorders. The debate relates to the balance between plasticity and stability of the underlying neural circuitry. We propose that to move the debate forward, the field needs to define the implied mechanism. First, we review the pRF changes in both healthy subjects and those with clinical disorders. Then, we propose a computational model that describes how pRFs can change in healthy humans. We assert that we can correctly interpret the pRF changes in clinical disorders only if we establish the capabilities and limitations of pRF dynamics in healthy humans with mechanistic models that provide quantitative predictions.},
	number = {August},
	journal = {Annual Review of Vision Science},
	author = {Dumoulin, Serge O. and Knapen, Tomas},
	year = {2018},
	pmid = {29889657},
	keywords = {clinical neuroscience, cognitive neuroscience, cortical organization, plasticity, population receptive field, stability},
